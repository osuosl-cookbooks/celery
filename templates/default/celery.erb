# This file is controlled by Chef. Local edits will be overwritten

# Names of nodes to start
#   but you can also start multiple and configure settings
#   for each in CELERYD_OPTS (see `celery multi --help` for examples).
CELERYD_NODES="<%= node['celery']['nodes'].join(' ') %>"

# Absolute or relative path to the 'celery' command:
CELERY_BIN="<%= node['celery']['bin'] %>"

# App instance to use
# comment out this line if you don't use an app
<% unless node['celery']['app'].nil? %>
CELERY_APP="<%= node['celery']['app'] %>"
<% end -%>

# Where to chdir at start.
CELERYD_CHDIR="<%= node['celery']['chdir'] %>"

# Extra command-line arguments to the worker
CELERYD_OPTS="<%= node['celery']['opts'] %>"

# %N will be replaced with the first part of the nodename.
CELERYD_LOG_FILE="<%= node['celery']['logfile'] %>"
CELERYD_PID_FILE="<%= node['celery']['pidfile'] %>"

# Workers should run as an unprivileged user.
#   You need to create this user manually (or you can choose
#   a user/group combination that already exists, e.g. nobody).
CELERYD_USER="<%= node['celery']['user'] %>"
CELERYD_GROUP="<%= node['celery']['group'] %>"

# If enabled pid and log directories will be created if missing,
# and owned by the userid/group configured.
<% unless node['celery']['createdirs'] == 0 or node['celery']['createdirs'].nil? -%>
CELERY_CREATE_DIRS=<%= node['celery']['createdirs'] %>
<% else -%>
CELERY_CREATE_RUNDIR=<%= node['celery']['createpiddir'] %>
CELERY_CREATE_LOGDIR=<%= node['celery']['createlogdir'] %>
<% end -%>

<% node['celery']['extraopts'].each_pair do |name, value| -%>
<%= name.upcase %>=<%= value %>
<% end -%>
